<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h1>Rooms</h1>

<div class="row">
  <div class="col-lg-6 col-md-12">
  <%= form_tag(rooms_path, method: :get, :class=>"form-group") do %>
    <div class="input-group">
      <%= text_field_tag :search, "",:class=>"form-control", :placeholder=>"Search rooms" %>
      <div class="input-group-append">
        <%= submit_tag 'Search', :class => "btn btn-outline-secondary"  %>
      </div>
    </div>
  <% end %>
  </div>
</div>

<%= link_to new_room_path, :class => "btn btn-sm btn-primary float-left" do %>
    <%= fa_icon "plus" %> New Room
<% end %>

<br/><br/>

<% @rooms.each do |room| %>
  <div class="card">
    <div class="card-body">
      <div class="d-inline-flex">
        <% if room.images.first %>
        <img src="<%= url_for(room.images.first.variant(resize_to_limit: [125, 125], auto_orient: true)) %>" class="mr-3 img-thumbnail" alt="...">
        
        <% else %>
        <img src="https://via.placeholder.com/125" class="mr-3 img-thumbnail" alt="...">
        <% end %>
      </div>
      <div class="d-inline-flex align-top">
        <h5 class="mt-0">
          <%= link_to room.name, room%>
          <br/>
          <small><%= link_to room.storages.count.to_s + " storages", room %>  with <%= items_count(room) %> items in total</small>
        </h5>        
      </div>
    </div>
  </div>
<% end %>