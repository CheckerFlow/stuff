<!DOCTYPE html>
<html lang="en">

<head>
  <title>Klar Schiff</title>

  <!-- Required meta tags for Bootstrap -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', 'turbolinks-track': 'true' %>  
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
  
</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading "><span class="text-info">Klar Schiff</span>Klar Schiff</div>
      <div class="list-group list-group-flush sticky-top">
        <% if current_user != nil %>
          <%= link_to rooms_url, :class=>"list-group-item list-group-item-action bg-light" do %>Rooms <span class="badge badge-pill badge-secondary"><%= current_user.rooms.all.count %> / <%= Room.all.count %></span><% end %>
          <%= link_to storages_url, :class=>"list-group-item list-group-item-action bg-light" do %>Storages <span class="badge badge-pill badge-secondary"><%= current_user.storages.all.count %> / <%= Storage.all.count %></span><% end %>
          <%= link_to items_url, :class=>"list-group-item list-group-item-action bg-light" do %>Items <span class="badge badge-pill badge-secondary"><%= current_user.items.all.count %> / <%= Item.all.count %></span><% end %>
        <% end %>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <!--
            <li class="nav-item active">
              <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            -->
            <% if !user_signed_in? %>
            <li class="nav-item">              
              <%= link_to "Register", new_user_registration_path, :class => "btn btn-primary" %>
            </li>            
            <li class="nav-item">
              <%= link_to "Login", new_user_session_path, :class => "nav-link" %>              
            </li>
            <% else %>
              <%= link_to "Logout", destroy_user_session_path, :class => "nav-link", :method => :delete %>              
                        
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  User Account
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <%= link_to "Change settings", edit_user_registration_path, :class => "dropdown-item" %>
                  <!--
                  <a class="dropdown-item" href="#">Another action</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="#">Something else here</a>
                  -->
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

      <div class="container-fluid">

        <%= yield %>

      </div>
    </div>
    <!-- /#page-content-wrapper -->

  </div>
  <!-- /#wrapper -->



  <!-- Menu Toggle Script -->
  <script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>

</body>

</html>
