  <%= csp_meta_tag %>

  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload', 'turbolinks-track': 'true' %>  
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>  
  
</head>

<body>

  <div class="d-flex" id="wrapper">

    
