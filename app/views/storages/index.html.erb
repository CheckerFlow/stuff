<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h1>Storages</h1>

<div class="row">
  <div class="col-lg-6 col-md-12">
    <%= form_tag(storages_path, method: :get, :class=>"form-group") do %>
      <div class="input-group">
        <%= text_field_tag :search, "",:class=>"form-control", :placeholder=>"Search storages" %>
        <div class="input-group-append">
          <button class="btn btn-outline-secondary">
            <%= fa_icon "search" %> Search
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
<% @storages.each do |storage| %>
  <div class="col-lg-3 col-md-4 col-sm-12 col-12">    
    <div class="d-inline-flex">
      <% if storage.images.first %>
      <img src="<%= url_for(storage.images.first.variant(resize_to_limit: [300, 200], auto_orient: true)) %>" class="mr-3 img-thumbnail" alt="...">
      <% else %>
      <img src="https://via.placeholder.com/300x200" class="mr-3 img-thumbnail" alt="...">
      <% end %>
    </div>
    <div class="d-inline-flex align-top mb-4">
      <h5 class="mt-0">
        <%= link_to storage.name, storage%>
        <br/>
        <small>in <%= link_to storage.room.name, storage.room %> with <%= storage.items.count %> items in total</small>          
      </h5>        
    </div>
  </div>
<% end %>
</div>