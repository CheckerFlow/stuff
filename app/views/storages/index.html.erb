<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h1>Storages</h1>

<%= link_to new_storage_path, :class => "btn btn-sm btn-primary float-left" do %>
    <%= fa_icon "plus" %> New Storage
<% end %>

<br/><br/>

<div class="list-group">
  <% @storages.each do |storage| %>
  <%= link_to storage.name, storage, :class=>"list-group-item list-group-item-action" %>
  <% end %>
</div>

