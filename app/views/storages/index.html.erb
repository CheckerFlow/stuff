<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h1>Storages</h1>

<% @storages.each do |storage| %>
  <div class="card">
    <div class="card-body">
      <div class="d-inline-flex">
        <% if storage.images.first %>
        <img src="<%= url_for(storage.images.first.variant(resize_to_limit: [125, 125], auto_orient: true)) %>" class="mr-3 img-thumbnail" alt="...">
        <% else %>
        <img src="https://via.placeholder.com/125" class="mr-3 img-thumbnail" alt="...">
        <% end %>
      </div>
      <div class="d-inline-flex align-top">
        <h5 class="mt-0">
          <%= link_to storage.name, storage%>
          <br/>
          <small>in <%= link_to storage.room.name, storage.room %> with <%= storage.items.count %> items in total</small>          
        </h5>        
      </div>
    </div>
  </div>
<% end %>