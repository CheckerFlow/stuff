<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h3><%= link_to @storage.room.name, @storage.room %> <%= fa_icon "arrow-right" %> <%= @storage.name %></h3>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to edit_storage_path(@storage), :class=>"btn btn-sm btn-outline-secondary" do %><%= fa_icon "edit" %> Ändern <% end %>
  <%= link_to edit_images_storage_path(@storage), :class=>"btn btn-sm btn-outline-secondary" do %><%= fa_icon "image" %> Bilder <% end %>
  <%= link_to @storage, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-sm btn-outline-danger" do %><%= fa_icon "trash" %> Löschen<% end %>
</div>

<br/><br/>

<div class="row">
  <div class="col-lg-8 col-md-6">

    <% if @storage.images.size > 0 %>

    <div id="carouselExampleIndicators" class="carousel slide">
      <ol class="carousel-indicators">
        <% @storage.images.each_with_index do |image, index| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" ></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @storage.images.each_with_index do |image, index| %>
        <div class="carousel-item <%= index == 0 ? 'active' : ''%> ">
          <img class="d-block w-100" src="<%= url_for(image.variant(auto_orient: true)) %>" alt="First slide">
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>  

    <% else %>
      <img src="https://via.placeholder.com/800x600" class="card-img-top img-thumbnail" alt="...">  
    <% end %>
    
  </div>

  <div class="col-lg-4 col-md-6">

    <h4>Dinge</h4>
    
    <div class="list-group sticky-top">

      <%= form_with(model: [@storage, Item.new], local: true) do |form| %>

        <div class="input-group mb-3">          
          <%= form.text_field(:name, :class => "form-control")  %>
          <div class="input-group-append">            
            <button class="btn btn-primary">
              <%= fa_icon "plus" %> Hinzufügen
            </button>            
          </div>
        </div>        

      <% end %>      
    
      <% @storage.items.each do |item| %>
        <div class="list-group-item">
          <%= link_to item.name, item %>   
          <br/>
          <% item.tags.each do |tag| %>
              <span class="badge badge-pill badge-light"><i>#<%= tag.name %></i></span>
          <% end %>
          <br/>                    
          <%= form_with(model: @list_item, class: "form-inline float-right") do |form| %>            
            <div class="form-group">              
              <div class="input-group">                  
                <%= form.select :list_id, options_from_collection_for_select(List.all, 'id', 'name') %>
                <%= form.hidden_field :item_id, value: item.id %>                
                <button type="submit" class="btn btn-sm btn-outline-primary input-group-append"><%= fa_icon "plus" %></button>
              </div>
            </div>                        
          <% end %>           

          <br/>
          <span class="badge badge-pill badge-light"><%= item.images.count.to_s %> Bilder </span>
          
        </div>
      <% end %>
    </div>  

  </div>

</div>


