<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h3><%= link_to @storage.room.name, @storage.room %> -> <%= @storage.name %></h3>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to edit_storage_path(@storage), :class=>"btn btn-sm btn-outline-secondary" do %><%= fa_icon "edit" %> Edit <% end %>
  <%= link_to @storage, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-sm btn-outline-danger" do %><%= fa_icon "trash" %> Destroy<% end %>
</div>

<br/><br/>

<div class="row">
  <div class="col-lg-8 col-md-6">

    <% if @storage.images.size > 0 %>

    <div id="carouselExampleIndicators" class="carousel slide">
      <ol class="carousel-indicators">
        <% @storage.images.each_with_index do |image, index| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" ></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @storage.images.each_with_index do |image, index| %>
        <div class="carousel-item <%= index == 0 ? 'active' : ''%> ">
          <img class="d-block w-100" src="<%= url_for(image.variant(auto_orient: true)) %>" alt="First slide">
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>  

    <% else %>
      <img src="https://via.placeholder.com/800x600" class="card-img-top img-thumbnail" alt="...">  
    <% end %>
    
  </div>

  <div class="col-lg-4 col-md-6">

    <h4>Items</h4>
    
    <div class="list-group sticky-top">

      <%= form_with(model: [@storage, Item.new], local: true) do |form| %>

        <div class="input-group mb-3">          
          <%= form.text_field(:name, :class => "form-control")  %>
          <div class="input-group-append">            
            <button class="btn btn-primary">
              <%= fa_icon "plus" %> Add
            </button>            
          </div>
        </div>        

      <% end %>      
    
      <% @storage.items.each do |item| %>
        <%= link_to item.name, item, :class=>"list-group-item list-group-item-action" %>
      <% end %>
    </div>  

  </div>

</div>


