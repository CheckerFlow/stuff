<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h3><%= @list.name %></h3>

<div class="btn-group" role="group" aria-label="Basic example">
  <%= link_to selectitems_list_path(@list), :class=>"btn btn-sm btn-outline-primary" do %><%= fa_icon "list" %> Ausw√§hlen <% end %>
  <%= link_to edit_list_path(@list), :class=>"btn btn-sm btn-outline-secondary" do %><%= fa_icon "edit" %> Edit <% end %>
  <%= link_to @list, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-sm btn-outline-danger" do %><%= fa_icon "trash" %> Destroy<% end %>
</div>



<br/><br/>

<div class="list-group sticky-top">
  <% list_items = ListItem.where(list_id: @list.id) %>
  <% if list_items.size == 0 %>
    Die Liste ist leer.
  <% else %>
    <%= list_items.each do |list_item| %>
      <% item = current_user.items.find(list_item.item_id) %>
      <div class="list-group-item">
        <b><%= link_to item.name, item %>
        <small>
        </b> im <%= item.storage.name %> im <%= item.storage.room.name %>
        </small>      
        <%= link_to removeItem_list_path({ :item_id => item.id }), :method => :delete, :class => "btn btn-sm btn-outline-danger float-right" do %><%= fa_icon "trash" %><% end %>
      </div>
    <% end %>
  <% end %>
</div>

