<% list_items = ListItem.where(list_id: @list.id) %>

<div class="list-group sticky-top">
  <% if list_items.size == 0 %>
    Die Liste ist leer.
  <% else %>
    <% list_items.each do |list_item| %>
      <% item = current_user.items.find(list_item.item_id) %>
      <div class="list-group-item">        
        <%= link_to item, :class => "btn btn-lg btn-outline-primary float-left mr-2" do %><%= fa_icon "angle-right" %><% end %>
        
        <b>
          <%= klarschiff_auto_link(item.name) %>
        </b>

        <%= link_to removeItem_list_path({ :item_id => item.id }), :method => :delete, :class => "btn btn-sm btn-outline-danger float-right" do %><%= fa_icon "trash" %><% end %>

        <!-- Modal buttons for image previews -->
        <a class="" data-toggle="modal" data-target="#modal-<%= item.id %>">
          <% if item.images.first %>
              <img src="<%= url_for(item.images.first.variant(resize_to_limit: [50, 50], auto_orient: true).processed) %>" class="img-thumbnail mr-3 float-right" alt="...">
          <% else %>
              <img src="https://via.placeholder.com/50x50" class="mr-3 float-right" alt="...">
          <% end %>                 
        </a>
        
        <br/>
        <!--
        <% if item.tags.size > 0 %>
        Tags: 
        <% item.tags.each do |tag| %>
          <span class="badge badge-pill badge-light"><i>#<%= tag.name %></i></span>
        <% end %>
        <br/>
        <% end %>
        Owners: 
        <% item.owner_list.each do |owner| %>
          <span class="badge badge-pill badge-light"><span>@<%= owner %></span></span>
        <% end %>
        <br/>        
        -->

        <small>
          Ablage: <%= link_to item.storage.name, item.storage %> Raum: <%= link_to item.storage.room.name, item.storage.room %>
        </small>
      </div>
    <% end %>
  <% end %>
</div>

<!-- Modal contents for image previews -->
<% list_items.each do |list_item| %>
  <% item = current_user.items.find(list_item.item_id) %>

  <div class="modal fade" id="modal-<%= item.id %>" tabindex="-1" role="dialog" aria-labelledby="modal-<%= item.id %>" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= item.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if item.images.first %>
          <img src="<%= url_for(item.images.first.variant(resize_to_limit: [1200, 1000], auto_orient: true).processed) %>" class="img-thumbnail mr-3 float-right" alt="...">
        <% else %>
            <img src="https://via.placeholder.com/400x300" class="mr-3 float-right" alt="...">
        <% end %>          
      </div>              
    </div>
  </div>
</div>

<% end %>
