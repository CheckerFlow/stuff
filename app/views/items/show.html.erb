<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h1>
  <%= @item.name %>
</h1>
<p>
  <%= link_to @item.storage.name, @item.storage %> im <%= link_to @item.storage.room.name, @item.storage.room %>
</p>
<p>
  <%= @item.description %>
</p>

<h5>Images</h5>
<div class="row">
<% @item.images.each do |image| %>
  <div class="col-sm-3">
    <img src="<%= url_for(image) %>" class="card-img-top img-thumbnail" alt="...">
  </div>
<% end %>
</div>

<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to @item, method: :delete, data: { confirm: 'Are you sure?' } do %><%= fa_icon "trash" %> Destroy<% end %> |
<%= link_to 'Back', items_path %>
