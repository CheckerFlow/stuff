<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h3><%= @item.name %></h3>

<div class="row">
  <div class="col-lg-6 col-sm-12">
    <%= form_with(model: [@item], local: true) do |form| %>
    
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
    
          <ul>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div class="form-group">
        <label>Bilder</label>
        <%= form.file_field :images, multiple: true, direct_upload: true, :class => "form-control" %>
      </div>    
    
      <div class="actions">
        <%= form.submit "Ändern", :class => "btn btn-primary" %>
      </div>
    <% end %>  
  </div>
</div>

<div class="row">
<% @item.images.each_with_index do |image, index| %>    
  <div class="card col-lg-2 col-md-3 col-sm-4 m-3 p-0">
    <img src="<%= url_for(image.variant(auto_orient: true, resize: '800x600^').processed) %>" class="card-img-top" alt="...">
    <div class="card-body p-2">
      <!--
      <h5 class="card-title">Card title</h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      -->
      <small>
        Datum: <%= image.created_at.strftime("%d.%m.%Y, %k:%M") %>
      </small>
      <%= link_to delete_image_attachment_item_path(image.signed_id), method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn btn-sm btn-outline-danger float-right" do %>
        <%= fa_icon "trash" %>
      <% end %>
    </div>
  </div>
<% end %>
</div>

<%= link_to 'Zurück', @item %>
