<% if notice != nil %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>    
</div>
<% end %>

<h1>Dinge</h1>

<div class="row">
  <div class="col-lg-6 col-md-12">
  <%= form_tag(items_path, method: :get, :class=>"form-group") do %>
    <div class="input-group">
      <%= text_field_tag :search, "",:class=>"form-control", :placeholder=>"" %>
      <div class="input-group-append">
        <button class="btn btn-outline-secondary">
          <%= fa_icon "search" %> Suchen
        </button>
      </div>
    </div>
  <% end %>
  </div>
</div>

<div class="row">
<% @items.each do |item| %>
  <div class="col-lg-3 col-md-4 col-sm-12 col-12">
    <div class="d-inline-flex">
      <%= link_to item do %>
        <% if item.images.first %>
        <img src="<%= url_for(item.images.first.variant(resize_to_limit: [300, 200], auto_orient: true)) %>" class="mr-3 img-thumbnail" alt="...">
        <% else %>
        <img src="https://via.placeholder.com/300x200" class="mr-3 img-thumbnail" alt="...">
        <% end %>
      <% end %>
    </div>
    <div class="d-inline-flex align-top mb-4">
      <h5 class="mt-0">
        <%= link_to item.name, item%>
        <br/>
        <small>
          <%= link_to item.storage.name, item.storage %> im <%= link_to item.storage.room.name, item.storage.room %>
        </small>
        <br/>
        <small>
          <% item.tags.each do |tag| %>
            <span class="badge badge-pill badge-light"><i>#<%= tag.name %></i></span>
          <% end %>        
        </small>
      </h5>
    </div>
  </div>
<% end %>
</div>