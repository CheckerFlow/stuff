<h1 class="text-info">Ändern</h1>

<%= form_with(model: [@item], local: true) do |form| %>
  
    <% if @item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
  
        <ul>
          <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <label>Name</label>
      <%= form.text_field(:name, :class => "form-control")  %>
    </div>
  
    <div class="form-group">
      <label>Beschreibung</label>
      <%= form.text_area(:description, :class => "form-control") %>
    </div>
  
    <div class="form-group">
      <label>Bilder</label>
      <%= form.file_field :images, multiple: true, direct_upload: true, :class => "form-control" %>
    </div>

    <div class="form-group">
      <label>Ablage</label>
      <%= form.select :storage_id, options_from_collection_for_select(current_user.storages.all, 'id', 'name', @item.storage_id), {}, { :class => "form-control" } %>
    </div>    
  
    <div class="actions">
      <%= form.submit "Ändern", :class => "btn btn-primary" %>
    </div>
  <% end %>
  

<%= link_to 'Anzeigen', @item %> |
<%= link_to 'Zurück', items_path %>
